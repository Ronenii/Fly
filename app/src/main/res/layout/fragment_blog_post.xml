<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentLogic.FragmentBlogPost"
    android:id="@+id/con_post">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_addPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorGradient1"
                    android:gravity="center"
                    android:minHeight="80dp"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="Add Post"
                    android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/btn_goBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_addPost"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="360dp"
                    android:layout_marginBottom="18dp"
                    android:onClick="onGoBackClick"
                    android:background="@color/colorGradient1"
                    android:src="@drawable/ic_go_back" />
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addPostTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_corners"
                android:singleLine="true"
                android:minHeight="20dp"
                android:padding="10dp"
                android:onClick="onUpdateText"
                android:layout_marginBottom="15dp"
                android:hint="Enter Title" />

            <ImageView
                android:id="@+id/addPostImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners"
                android:singleLine="true"
                android:minHeight="20dp"
                android:padding="10dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/add_img" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/addPostDesc"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:background="@drawable/rounded_corners"
                android:singleLine="true"
                android:minHeight="20dp"
                android:padding="10dp"
                android:onClick="onUpdateText"
                android:layout_marginBottom="15dp"
                android:hint="Enter Description" />

            <Button
                android:id="@+id/buttonUpload"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_gravity="end"
                android:layout_marginTop="20sp"
                android:onClick="onUpload"
                android:text="Upload" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
